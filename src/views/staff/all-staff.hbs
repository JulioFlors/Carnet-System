<div class="table-responsive-md">
    <table class="table table-hover table-dark" id="dataTable">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Cedula</th>
                <th scope="col">Nombre</th>
                <th scope="col">Departamento</th>
                <th scope="col">Cargo</th>
                <th scope="col">Sangre</th>
                <th scope="col">Carnet</th>
            </tr>
        </thead>
        <tbody>

            {{#each data}}

            <tr>
                <td>{{dataValues.cedula}}</td>
                <td>{{capitalize dataValues.first_name}} {{capitalize dataValues.last_name}}</td>
                <td>{{capitalize department.dataValues.description}}</td>
                <td>{{capitalize position.dataValues.description}}</td>
                <td>{{staff.dataValues.blood_type}}</td>
                <td>{{haveCarnet staff.dataValues.carnet.dataValues.cedula}}</td>
