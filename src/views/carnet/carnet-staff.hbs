<!-- Main content -->
<div class="container">

    <div class="row justify-content-around">

        <div class="col-lg-5 col-md-7 col-sm-9 oculto-impresion justify-content-center align-self-center">
            <div class="card">

                <div class="card-header">
                    <form action="/carnet/staff/view" method="POST" class="has-search" id="formSearch">
                        <span class="fa fa-search form-control-feedback fa-w-16"></span>
                        <input autofocus type="text" class="form-control" name="cedula" id="cedula"
                            placeholder="Search by Cedula" maxlength="8" autocomplete="off">
                    </form>
                </div>

                <div class="card-body">

                    <form action="/carnet/staff/uploadPhoto" method="POST" id="form" enctype="multipart/form-data">

                        <div class="form-group">
                            <input required {{#if data.dataValues.cedula}} value="{{data.dataValues.cedula}}" {{/if}}
                                {{#if cedula}} value="{{cedula}}" {{/if}} type="text" class="form-control" name="cedula"
                                id="cedula" maxlength="8" autocomplete="off" placeholder="Cedula">
                        </div>

                        <div class="form-group">
                            <input required {{#if data.dataValues.first_name}}
                                value="{{capitalize data.dataValues.first_name}}" {{/if}} {{#if first_name}}
                                value="{{capitalize first_name}}" {{/if}} type="text" class="form-control"
                                name="firstname" id="firstname" maxlength="50" autocomplete="off"
                                placeholder="Firstname">
                        </div>

                        <div class="form-group">
                            <input required {{#if data.dataValues.last_name}}
                                value="{{capitalize data.dataValues.last_name}}" {{/if}} {{#if last_name}}
                                value="{{capitalize last_name}}" {{/if}} type="text" class="form-control"
                                name="lastname" id="lastname" maxlength="50" autocomplete="off" placeholder="Lastname">
                        </div>

                        <div class="form-group">
                            <input required {{#if data.department.dataValues.description}}
                                value="{{capitalize data.department.dataValues.description}}" {{/if}} {{#if department}}
                                value="{{capitalize department}}" {{/if}} type="text" class="form-control"
                                name="department" id="department" maxlength="50" autocomplete="off"
                                placeholder="Department">
                        </div>

                        <div class="form-group">
                            <input required {{#if data.position.dataValues.description}}
                                value="{{capitalize data.position.dataValues.description}}" {{/if}} {{#if position}}
                                value="{{capitalize position}}" {{/if}} type="text" class="form-control" name="position"
                                id="position" maxlength="50" autocomplete="off" placeholder="Position">
                        </div>

                        <div class="form-group">
                            <label for="date_of_expiration">Date of Expiration</label>
                            <input required {{#if data.staff.dataValues.carnet.dataValues.date_of_expiration}}
                                value="{{data.staff.dataValues.carnet.dataValues.date_of_expiration}}" {{/if}}
                                {{#if date_of_expiration}} value="{{date_of_expiration}}" {{/if}} type="month"
                                class="form-control" name="date_of_expiration" id="date_of_expiration" maxlength="10"
                                autocomplete="off">
                        </div>

                        <div class="form-group">
                            <div class="custom-file">
                                <input required type="file" class="custom-file-input" name="photo" id="photo">
                                <label class="custom-file-label" for="photo">Upload photo</label>
                            </div>
                        </div>

                        <div class="form-group">
                            <select class="custom-select" name="blood_type" id="blood_type">
                                {{#if data.staff.dataValues.blood_type}}
                                <option selected value="{{data.staff.dataValues.first_name}}">
                                    {{data.staff.dataValues.blood_type}}</option>
                                {{else}}
                                <option disabled selected>Blood Type</option>
                                <option value="O +">O +</option>
                                <option value="O -">O -</option>
                                <option value="A +">A +</option>
                                <option value="A -">A -</option>
                                <option value="B +">B +</option>
                                <option value="B -">B -</option>
                                <option value="AB +">AB +</option>
                                <option value="AB -">AB -</option>
                                {{/if}}
                            </select>
                        </div>

                        <button class="btn btn-success btn-block">
                            Preview
                        </button>

                    </form> <!-- /.form -->

                </div> <!-- /.card-body -->

            </div> <!-- /.card -->

        </div> <!-- /.col-md-6 -->


        {{#if photo.dataValues.path}}
        <div class="col-xl-3 pt-5 card-carnet justify-content-center align-self-center">

            <!-- Carnet -->
            <div class="carnet" id="carnet">
                <div class="delantera">

                    <div class="photo">
                        <img src="{{photo.dataValues.path}}" class="img-fluid" alt="Photo">
                    </div>


                    <div class="datos">
                        <div class="grupo" id="numero">
                            <p class="label">NÃºmero Tarjeta</p>
                            <p class="numero">#### #### #### ####</p>
                        </div>
                        <div class="flexbox">
                            <div class="grupo" id="nombre">
                                <p class="label">Nombre Tarjeta</p>
                                <p class="nombre">Jhon Doe</p>
                            </div>

                            <div class="grupo" id="expiracion">
                                <p class="label">Expiracion</p>
                                <p class="expiracion"><span class="mes">MM</span> / <span class="year">AA</span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.Carnet -->

            <!-- Container Print-Button -->
            <div class="btn-print">
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-secondary oculto-impresion" data-toggle="modal"
                    data-target="#confirmPrint" onclick="imprimir()"><i class="fas fa-print"></i>
                </button>
            </div>
            <!-- /.Container Print-Button -->

            <!-- Modal -->
            <div class="modal fade" id="confirmPrint" data-backdrop="static" tabindex="-1" role="dialog"
                aria-labelledby="confirmPrintLabel" aria-hidden="true">

                <div class="modal-dialog modal-sm" role="document">
                    <div class="modal-content" style="color: white;">
                        <div class="modal-header">
                            <h6 class="modal-title" id="confirmPrintLabel">Confirm Print</h6>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Was the credential printing successful?
                        </div>
                        <div class="modal-footer">
                            <!-- Carnet Request -->
                            <form action="/carnet/staff/createCarnet" method="Post" id="formModal">
                                <input type="hidden" name="cedula" id="cedula">
                                <input type="hidden" name="date_of_expiration" id="date_of_expiration">
                                <input type="hidden" name="department" id="department">
                                <input type="hidden" name="position" id="position">

                                <button type="submit" class="btn btn-success btn-sm" id="printYes">Yes</button>
                                <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">No</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div> <!-- /.modal -->

        </div> <!-- /.col-md-4 -->
        {{/if}}

    </div> <!-- /.row -->

</div> <!-- /.content -->