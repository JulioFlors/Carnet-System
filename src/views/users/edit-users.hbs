<div class="container container-signin">
    <div class="row row-signin">
        <div class="col-xl-4 col-lg-5 col-md-6 col-sm-8 col-signin">

            <div class="card">

                <div class="card-header text-center">
                    <img class="icon" src="/img/logos/icon.png" alt="Logo">
                    <h3 class="tittle">Editar Usuario</h3>
                </div>

                <div class="card-body">
                    <form action="/users/update/{{id}}?_method=PUT" method="POST">
                        <input type="hidden" name="_method" value="PUT">

                        <div class="form-group">
                            <input required autofocus type="text" class="form-control" name="usuario"
                                placeholder="Usuario" maxlength="16" autocomplete="off" {{#if usuario}}
                                value="{{capitalize usuario}}" {{/if}} />
                        </div>

                        <div class="form-group">
                            <select class="custom-select" name="permission">
                                {{#if permission}}
                                <option disabled>Permiso seleccionado</option>
                                <option selected value="{{permission}}">{{permission}}</option>
                                <option disabled>Permisos del usuario</option>
                                <option value="Admin">Admin</option>
                                <option value="Edit">Edit (Puede Editar e Imprimir) </option>
                                <option value="Read">Read (Solo puede Imprimir)</option>
                                {{/if}}
                            </select>
                        </div>

                        <div class="button">
                            <button class="btn btn-success btn-block">
                                Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>

            </div>

        </div>
    </div>
</div>